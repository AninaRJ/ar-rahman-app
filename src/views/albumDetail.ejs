<%- include('partials/header') %>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>About A R Rahman</title>
    <link rel="stylesheet" href="/styles.css">
</head>
<body>
<main>
  <section style="max-width:600px;margin:2rem auto;background:#fff;padding:2rem;border-radius:12px;box-shadow:0 2px 8px rgba(108,52,131,0.08);">
    <h2><%= album.albumTitle %></h2>
    <div style="margin-top:0.5rem;font-size:0.9em;color:#555;">
      <span><strong>Year Released:</strong> <%= album.yearReleased %></span>
      <% if (album.language) { %>
        <span style="margin-left:1em;"><strong>Language:</strong> <%= album.language %></span>
      <% } %>
    <div>
    <div style="margin-top:1rem;font-size:0.95em;color:#333;">
      <%= album.albumDescription %>
    </div>
  <br/>
      <% 
      // Icon SVGs
      const spotifyIcon = `<svg width="30" height="30" viewBox="0 0 496 512" style="vertical-align:middle"><path fill="#1DB954" d="M248 8C111 8 0 119 0 256c0 137 111 248 248 248s248-111 248-248C496 119 385 8 248 8zm121.7 365.1c-5.3 8.8-16.6 11.6-25.4 6.3-69.6-42.6-157.3-52.2-260.1-28.6-10 2.2-20.1-4.1-22.3-14.1-2.2-10 4.1-20.1 14.1-22.3 112.7-25.2 209.8-14.2 287.2 32.2 8.8 5.3 11.6 16.6 6.3 25.5zm35.2-61.4c-6.6 10.7-20.7 14.1-31.4 7.5-79.7-49-201.6-63.3-296.2-34.7-12 3.7-24.9-3.2-28.6-15.2-3.7-12 3.2-24.9 15.2-28.6 106.6-32.2 237.6-16.2 327.7 40.2 10.7 6.6 14.1 20.7 7.5 31.4zm.3-65.9C357.5 232 236.6 214.2 130.1 246c-14.1 4.2-29-3.7-33.2-17.8-4.2-14.1 3.7-29 17.8-33.2 119.7-35.7 255.2-15.6 353.6 54.1 12.3 8.4 15.4 25.1 7 37.4-8.4 12.3-25.1 15.4-37.4 7z"/></svg>`;
      const youtubeIcon = `<svg width="30" height="30" viewBox="0 0 576 512" style="vertical-align:middle"><path fill="#FF0000" d="M549.655 124.083c-6.281-23.725-24.958-42.401-48.684-48.684C458.281 64 288 64 288 64s-170.281 0-212.971 11.399c-23.726 6.283-42.403 24.959-48.684 48.684C16 166.773 16 256 16 256s0 89.227 10.345 131.917c6.281 23.725 24.958 42.401 48.684 48.684C117.719 448 288 448 288 448s170.281 0 212.971-11.399c23.726-6.283 42.403-24.959 48.684-48.684C560 345.227 560 256 560 256s0-89.227-10.345-131.917zM232 336V176l142.857 80L232 336z"/></svg>`;
      const appleMusicIcon = `<svg width="30" height="30" viewBox="0 0 384 512" style="vertical-align:middle"><path fill="#FA233B" d="M318.7 268.7c-35.3 0-64 28.7-64 64 0 35.3 28.7 64 64 64s64-28.7 64-64c0-35.3-28.7-64-64-64zm-192 32c-35.3 0-64 28.7-64 64 0 35.3 28.7 64 64 64s64-28.7 64-64c0-35.3-28.7-64-64-64zm218.7-228.7c-7.5-7.5-18.7-9.8-28.3-5.7l-176 72A24 24 0 0 0 128 160v228.7c-7.5-2.7-15.5-4.7-24-4.7-44.2 0-80 35.8-80 80s35.8 80 80 80 80-35.8 80-80V243.7l128-52.5v97.5c-7.5-2.7-15.5-4.7-24-4.7-44.2 0-80 35.8-80 80s35.8 80 80 80 80-35.8 80-80V56c0-9.6-5.7-18.2-14.3-22z"/></svg>`;
    %>
    <% if (album.leadActors) { %>
        <div><strong>Lead Actors:</strong> <%= album.leadActors.split('\n').join(', ')%></div>
    <% } %>
     <% if (album.lyricists && album.lyricists.length > 0) { %>
        <div><strong>Lyricists:</strong> <%= album.lyricists %></div>
    <% } %>
    <% if (album.albumLabel) { %>
        <div><strong>Label:</strong> 
          <a href="<%= album.albumLabel.wikipediaUrl %>" target="_blank" style="font-size:0.95em;">
          <%= album.albumLabel.labelName %>
          </a>
        </div>
    <% } %>
    <div style="margin-top:1rem;">
      <% if (album.albumLinks.spotifyUrl) { %>
        <a href="<%= album.albumLinks.spotifyUrl %>" target="_blank" title="Spotify" style="margin-right:12px;"><%- spotifyIcon %></a>
      <% } %>
      <% if (album.albumLinks.youtubeUrl) { %>
        <a href="<%= album.albumLinks.youtubeUrl %>" target="_blank" title="YouTube" style="margin-right:12px;"><%- youtubeIcon %></a>
      <% } %>
      <% if (album.albumLinks.appleMusic) { %>
        <a href="<%= album.albumLinks.appleMusic %>" target="_blank" title="Apple Music" style="margin-right:12px;"><%- appleMusicIcon %></a>
      <% } %>
      <!-- <% if (album.wikipedia) { %>
        <a href="<%= album.wikipedia %>" target="_blank" title="Wikipedia" style="margin-right:12px;">Wikipedia</a>
      <% } %> -->
    </div>
    <% if (album.awards) { %>
      <div style="margin-top:1rem;">
        <strong>Awards:</strong>
        <ul>
          <li><%= album.awards %></li>
        </ul>
      </div>
    <% } %>

    <% if (album.songs && album.songs.length) { %>
      <div style="margin-top:1rem;">
        <strong>Song List:</strong>
        <ul>
          <% album.songs.forEach(function(song) { %>
            <div class="song-item">
              <span><strong><%= song.songTitle %></strong></span>
              <span>Lyricists: <i><%= song.lyricists %></i></span>
              <span>Singers: <%= song.singers %></span>
              <span>Length: <%= song.length %></span>

              <div style="margin-top:1rem;">
                <% if (song.audioLink && song.audioLink.youtubeUrl) { %>
                  <a href="<%= song.audioLink.youtubeUrl %>" target="_blank" title="YouTube" style="margin-right:12px;"><%- youtubeIcon %></a>
                <% } %>
                <% if (song.audioLink && song.audioLink.appleMusic) { %>
                  <a href="<%= song.audioLink.appleMusic %>" target="_blank" title="Apple Music" style="margin-right:12px;"><%- appleMusicIcon %></a>
                <% } %>
                <% if (song.audioLink && song.audioLink.spotifyUrl) { %>
                  <a href="<%= song.audioLink.spotifyUrl %>" target="_blank" title="Wikipedia" style="margin-right:12px;"><%- spotifyIcon %></a>
                <% } %>
              </div>
            </div>
          <% }); %>
        </ul>
      </div>
    <% } %>
    </div>
  </section>
</main>
<%- include('partials/footer', { active: 'albumDetail' }) %>
</body>
</html>